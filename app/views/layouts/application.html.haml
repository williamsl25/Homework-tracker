!!!
%html
  %head
    %title Homework

    = csrf_meta_tags
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
  %body
    / Static navbar
%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} IronYard Homework Tracker
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Home", root_path
        / %li
        /   = link_to "About", welcome_about_path
        %li
          %a{:href => "mailto: ironyardhomework.com?subject=Student Input", :target => "_blank"} Contact
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Navigate
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "Locations", locations_path 
            %li
              = link_to "Courses", courses_path
            %li
              = link_to "All Assignments", assignments_path, :id => "nav_assignments"
            %li
              = link_to "Users Main Page", users_path
               
            / %li.divider
            / %li.dropdown-header Nav header
            / %li
            /   %a{:href => "#"} Separated link
            / %li
            /   %a{:href => "#"} One more separated link
      %ul.nav.navbar-nav.navbar-right
        -if current_user
          %li
            = link_to "Logout: #{current_user.email}", destroy_user_session_path, method: :delete 
        -else
          %li
            = link_to "Login", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path
    / /.nav-collapse
- if notice || alert
  %p.notice= notice
  %p.alert= alert
.container
  / Main component for a primary marketing message or call to action
  
